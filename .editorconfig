root = true

[*]
charset = utf-8
end_of_line = LF
trim_trailing_whitespace = true

# coffeelint standards
[*.coffee]
indent_style = space
indent_size = 2

# shouldn't be editing css anyway
[*.css]
indent_style = space
indent_size = 2

# html is not minified so reduce character output by using real tabs
# use indent size 4 for parity with PHP
[*.html]
indent_style = tab
indent_size = 4

# jshint standards
[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = tab
indent_size = 4

[*.mustache]
indent_style = tab
indent_size = 4

# PHP http://make.wordpress.org/core/handbook/coding-standards/php/
[*.php]
indent_style = tab
indent_size = 4
insert_final_newline = true

# scss-lint standards
[*.scss]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.xml]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = space
indent_size = 2